{
  "name": "@gravitate-health/lens-tool-bundler",
  "version": "0.5.5",
  "description": "CLI tool for creating, bundling, testing, and deploying FHIR-compliant Gravitate Health lenses - JavaScript enhancement functions that personalize electronic product information (ePI) for patients",
  "keywords": [
    "oclif",
    "fhir",
    "healthcare",
    "gravitate-health",
    "lens",
    "epi",
    "enhanced-product-information",
    "library",
    "bundler",
    "cli",
    "medical",
    "patient-empowerment"
  ],
  "homepage": "https://github.com/Gravitate-Health/lens-tool-bundler",
  "bugs": "https://github.com/Gravitate-Health/lens-tool-bundler/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gravitate-Health/lens-tool-bundler.git",
    "directory": "."
  },
  "license": "Apache-2.0",
  "author": "Universidad PolitÃ©cnica de Madrid (UPM)",
  "contributors": [
    "Gravitate Health Project Team"
  ],
  "funding": {
    "type": "eu",
    "url": "https://www.gravitatehealth.eu"
  },
  "type": "module",
  "exports": "./lib/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "lens-tool-bundler": "bin/run.js"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json",
    "LICENSE.txt"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts",
    "prepack": "npm run build && oclif manifest",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepare": "npm run build",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "posttest": "npm run lint",
    "version": "oclif readme && git add README.md"
  },
  "oclif": {
    "bin": "lens-tool-bundler",
    "commands": "./dist/commands",
    "dirname": "lens-tool-bundler",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "bundle": {
        "description": "Bundle lenses from a source code format to JSON"
      }
    }
  },
  "dependencies": {
    "@gravitate-health/lens-tool-test": "^1.0.3",
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "3.1.0",
    "chardet": "^2.1.0",
    "fast-xml-parser": "^5.3.4",
    "iconv-lite": "^0.6.3",
    "inquirer": "^9.2.23",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4.1.16",
    "@types/chai": "^4",
    "@types/inquirer": "^9.0.7",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "chai": "^4",
    "eslint": "^9.39.2",
    "eslint-config-oclif": "6.0.137",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10",
    "oclif": "^4.11.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
